<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/quill@2.0.0/dist/quill.js"></script>
    <link rel="stylesheet" href="/css/admin.css">

    <title>Add Home Data</title>
</head>
<body>
    <h2>
        Add Home Data Here

    </h2>
    <form style="margin-left: 100px;" action="/admin/add-home-data" method="POST" enctype="multipart/form-data">
        <div>
            <label for="image">Image:   </label>
            <input type="file" id="image" name="image">
        </div>
        <div>
            <label for="name">Name:</label> <br><br>
            <input type="text" id="name" name="name" required>
        </div>
        <div>
            <label for="content">Content:</label><br><br>
           <textarea name="content" id="content" cols="70" rows="10" required></textarea>
              </div>        </div><br>
        <button class="sub-btn" type="submit">Upload</button>
    </form>


    <script>
        const quill = new Quill('#editor', {
          theme: 'snow'
        });

        const form = document.querySelector('form');
form.addEventListener('submit', function(event) {
    // Get content from the Quill editor
    const quillContent = quill.root.innerHTML;

    // Set the content in the hidden input field
    const contentInput = document.querySelector('#content');
    contentInput.value = quillContent;
});
      </script>
</body>
</html>



